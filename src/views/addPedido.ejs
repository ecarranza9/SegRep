<%- include ('partials/__header');  %> 




<div class="container-fluid" id="cont_form">

    <h1>Formulario de pedido</h1>

    <button type="button" class="btn btn-danger pd-5" data-toggle="modal" data-target="#exampleModal">
      Prioridades
    </button>

    <div class="row pt-5">

     

       <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Prioridades</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul>
              <li>1 - Avería con caracter urgente</li>
              <li>2 - Avería con caracter importante </li>
              <li>3 - Capacitacion</li>
              <li>4 - Otros</li>

              
          </ul>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

   <!-- Button trigger modal -->


        <div class="col-md-6">

<form id="form_pedido" action="/pedido/nuevo" method="POST">

    <div class="form-group">
        <label for=""><strong>Interno</strong></label>
        <input type="number" name="interno" class="form-control">
    </div>

    
    <div class="form-group">
        <label for=""><strong>Fecha de apertura</strong></label>
        <input type="date" name="fecha_apertura" class="form-control" required>
    </div>

    <div class="form-group">
      <label for=""><strong>Hora de apertura</strong></label>
      <input type="time" name="hora_apertura" class="form-control" required>
  </div>

    <div class="form-group">
        <label for=""><strong>Solicitud</strong></label>
        <input type="text" name="solicitud" class="form-control">
    </div>

    
    <div class="form-group">
        <label for=""><strong>Ubicación del equipo</strong></label>
        <input type="text" name="ubicacion_eqp" class="form-control" required>
    </div>

    <div class="form-group">
        <label for=""><strong>Nombre y apellido del solicitante</strong></label>
        <input type="text" name="emisor" class="form-control" required>
    </div>

    <label for=""><strong>Método de contacto</strong></label> <br>
    <select id="contacto" name="metodo_contacto" onChange="mostrar(this.value)" required>
        <div class="form-check">
            <label class="form-check-label">
              <option type="radio" class="form-check-input" name="metodo_contacto" value="WhatsApp">WhatsApp
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <option type="radio" class="form-check-input" name="metodo_contacto" value="Mail">Mail
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <option type="radio" class="form-check-input" name="metodo_contacto" value="Telefono">Llamada Telefonica
            </label>
          </div>
    
        </select>
     
    <div class="form-group pt-2" id="mail" style = "display:none">
      <label for=""><strong>Mail</strong></label>
      <input type="text" name="mail_solicitante" id="mail_input" class="form-control">
  </div>

  <div class="form-group pt-2" id="telefono" style = "display:block">
    <label for=""><strong>Teléfono</strong></label>
    <input type="number" name="tel_solicitante" id="telefono_input" class="form-control">
</div>

    <div class="form-group pt-2">
        <label for=""><strong>Indicaciones</strong></label>
        <input type="text" name="indicaciones"class="form-control">
    </div>

    <div class="form-group">
        <label for=""><strong>Prioridad</strong></label>
        <input type="number" name="prioridad" min="1" max="4" required>
    </div>

    <div class="form-group">
        <input type="number" name="estado" value= "0" style="display: none;">
    </div>
    <div class="form-group">
    <button id="boton_form" class="btn btn-success"type="submit">Agregar</button>
  </div>


</form>

</div>

</div>

</div>

<%- include ('partials/__footer');  %> 